<Window x:Class="Tresu.ForgotPassWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tresu"
        mc:Ignorable="d"
        Title="ForgotPassWindow" Height="250" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51*"/>
            <RowDefinition Height="113*"/>
            <RowDefinition Height="55*"/>
        </Grid.RowDefinitions>
        <StackPanel  Orientation="Horizontal" Margin="120,0,0,0">
            <Image Source="tresu_logo.png"/>
            <Label Content="Tresu"  FontSize="24" FontWeight="Bold"/>
        </StackPanel>
        <StackPanel Grid.Row="1"  Margin="20,0,0,0">
            <Label Content="Input your email :" FontSize="20"/>
            <TextBox Width="200" x:Name="EmailBox" HorizontalAlignment="Left"/>
        </StackPanel>
        <Button Grid.Row="2" Click="ButtonSubmit" Content="Submit" Width="150" HorizontalAlignment="Right" Margin="0,0,20,0"/>
    </Grid>
</Window>
