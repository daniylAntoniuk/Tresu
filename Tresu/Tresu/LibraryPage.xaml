<Page x:Class="Tresu.LibraryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tresu"
      mc:Ignorable="d" 
      d:DesignHeight="250" d:DesignWidth="400"
      Title="LibraryPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="181*"/>
            <ColumnDefinition Width="619*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="169*"/>
            <RowDefinition Height="281*"/>
        </Grid.RowDefinitions>
        <Image x:Name="img" />
        <Button Click="Button_Click" Grid.Column="1" Width="100" Content="Play" FontSize="15" HorizontalAlignment="Right" Margin="0,0,30,0"/>
        <TextBlock FontSize="13" x:Name="txt" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap"/>
    </Grid>
</Page>
